<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>by.bsuir.spp.controller.Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>by.bsuir.spp.listener.ConnectionProviderListener</listener-class>
    </listener>

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <filter>
        <display-name>CharsetFilter</display-name>
        <filter-name>CharsetFilter</filter-name>
        <filter-class>by.bsuir.spp.filter.CharsetFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CharsetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>SessionFilter</filter-name>
        <filter-class>by.bsuir.spp.filter.SessionFilter</filter-class>
        <init-param>
            <param-name>avoid-urls</param-name>
            <param-value>
                /login.jsp,/registration.jsp
            </param-value>
        </init-param>
        <init-param>
            <param-name>user_pages</param-name>
            <param-value>
                /controller,/favicon.ico,/home.jsp,/user_receipts.jsp,/advertisement_view.jsp,/package_view.jsp,/prepayment_book_view.jsp,/receipt_view.jsp,/search_statement_view.jsp,/user_advertisements.jsp,/user_packages.jsp,/user_prepayment_books.jsp,/user_searchstatements.jsp,/payment_page.jsp
            </param-value>
        </init-param>
        <init-param>
            <param-name>user_commands</param-name>
            <param-value>
                add_package,select_package,prepare_data_for_creation_package,add_receipt,prepare_data_for_creation_receipt,select_receipt,get_packages_for_user,get_user_receipts,get_user_advertisements,get_user_search_statements,get_user_prepayment_books,login_command,registration_command,logout_command,prepare_data_for_creation_search_statement,add_search_statement,select_search_statement,prepare_data_for_creation_prepayment_book,add_prepayment_book,select_prepayment_book,select_advertisement,prepare_data_for_creation_receipt,add_receipt,select_receipt</param-value>
        </init-param>
        <init-param>
            <param-name>admin_pages</param-name>
            <param-value>
                /controller,/favicon.ico,/advertisements.jsp,/advertisement_view.jsp,/home_admin.jsp,/package_view.jsp,/packages.jsp,/passport_view.jsp,/passports.jsp,/prepayment_book_view.jsp,/prepayment_books.jsp,/receipt_view.jsp,/receipts.jsp,/search_statement_view.jsp,/search_statements.jsp,/user_view.jsp,/users.jsp
            </param-value>
        </init-param>
        <init-param>
            <param-name>manager_commands</param-name>
            <param-value>
                load_packages,delete_package,select_package,get_new_packages,load_receipts,select_receipt,delete_receipt,load_advertisements,add_advertisement,prepare_data_for_creation_advertisement,delete_adverisement,update_advertisement,select_advertisement,load_prepayment_books,select_prepayment_book,delete_prepayment_book,load_search_statements,select_search_statement,delete_search_statement,login_command,registration_command,logout_command</param-value>
        </init-param>
        <init-param>
            <param-name>manager_pages</param-name>
            <param-value>/controller,/favicon.ico,/advertisements.jsp,/advertisement_view.jsp,/home_manager.jsp,/package_view.jsp,/packages.jsp,/prepayment_book_view.jsp,/prepayment_books.jsp,/receipt_view.jsp,/receipts.jsp,/search_statement_view.jsp,/search_statements.jsp</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>SessionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


</web-app>